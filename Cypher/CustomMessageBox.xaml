<mah:MetroWindow x:Class="Cypher.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Cypher"
        Title="File encryption success" Height="200" Width="500" WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#FF2E2E2E" Foreground="White" BorderBrush="#FF3C3C3C" BorderThickness="1"
        WindowStyle="None">
    <Grid>
        <Border CornerRadius="10" Background="#FF424242" Padding="10">
            <StackPanel>
                <TextBlock Name="MessageTextBlock" Text="Test" 
                           TextWrapping="Wrap"
                           FontSize="16" Margin="0,0,0,10" TextAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="OkButton" Content="OK" Width="80" Height="30"  
                            Margin="5" Click="OkButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</mah:MetroWindow>
